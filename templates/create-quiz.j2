{% extends "layout.j2" %}
{% block sub_content %}
    <div class="text-center">
      <h1> Create New Quiz </h1>
    </div>

    <form class="form-horizontal" method="POST">

        <div class="form-group">
          <label class="control-label col-sm-4">Time Allowed (In Minutes)</label>
          <div class="col-sm-5">
            <input type="text" name="total_time"/>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-4">Due Date (YYYY-MM-DD)</label>
          <div class="col-sm-5">
            <input type="text" name="due_date"/>
          </div>
        </div>

        <div class="form-group">
        <div class="col-sm-offset-4 col-sm-5">
          <button type="Submit" >Create</button>
        </div>
      </div>
    </form>
{% endblock %}
